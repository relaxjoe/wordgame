<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nerdle Gameplay</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./css/style.css">
  </head>
  <body class="bg-gray-100">
    <!-- email and the game grid -->
    <div class="container mx-auto px-4 py-8">
      <!-- User Email Display -->
      <div class="flex justify-end flex-col">
        <span class="text-md text-gray-700">User: {{email}}</span>
        <span class="text-md text-gray-700">Score: {{score}}</span>
      </div>

      <!-- Game Grid -->
      <div class="mt-8 flex justify-center items-center">
        <div class="grid grid-cols-4 gap-4">
          <!-- 4x6 grid for the game -->
            <div id="board" class="grid grid-cols-4 gap-4">

                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>
                <div class="w-16 h-16 bg-white border border-gray-300 flex justify-center items-center text-lg font-bold uppercase"></div>

            </div>
            <input id="guess-field" type="text" max="4" />
            <button id="btn">Guess</button>
        </div>
      </div>
    </div>
      <script src="./main.js"></script>
  </body>
</html>