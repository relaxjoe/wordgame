<!-- Login and singup forms -->
<div class="row justify-space-between-md">
  <!-- Login card and form -->
  <div class="login-card">
    <h2 class="page-title">Login</h2>
    <form
      method="POST"
      action="/api/user/login"
      class="form login-form"
      id="login-form"
    >
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <!-- Signup card and form -->
  <div class="signup-card">
    <h2 class="page-title">Signup</h2>
    <form
      method="POST"
      action="/api/user/signup"
      class="form signup-form"
      id="signup-form"
    >
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input
          name="username"
          class="form-input"
          type="text"
          id="username-signup"
        />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input name="email" class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input
          name="password"
          class="form-input"
          type="password"
          id="password-signup"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>

</div>

<script src="/public/login.js"></script>